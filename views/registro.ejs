        <div class="formInt">
            <h5>Categoria de Interes</h5>
            <div class="chkBox"><input type="checkbox" name="hobby" value="P"><span class="txtRadio">Electro</span></div>
            <div class="chkBox"><input type="checkbox" name="hobby" value="C"><span class="txtRadio">Moda</span></div>
            <div class="chkBox"><input type="checkbox" name="hobby" value="Y"><span class="txtRadio">Hogar</span></div>
            <div class="chkBox"><input type="checkbox" name="hobby" value="C"><span class="txtRadio">Jugueteria</span></div>
            <div class="chkBox"><input type="checkbox" name="hobby" value="Y"><span class="txtRadio">Vida Sana</span></div>
        </div>

        <h5>Foto Usuario:</h5>
        <input type="file" id="foto" name="foto" required>

        <div class="formUser">
            <h5>Contraseña:</h5>
            <label for="psw">Contraseña:</label>
            <input type="password" id="psw" name="psw" required>
            <label for="psw2">Repite Contraseña:</label>
            <input type="password" id="psw2" name="psw2" required>

            <input class="btn" type="submit" value="Enviar">
            <input class="btnReset" type="reset"  value="Borrar">
